CREATE TABLE Clients (
   Clients_id INT NOT NULL PRIMARY KEY, 
   Nom_Clients VARCAHR(50) NOT NULL,
   Adresse VARCHAR(50) NOT NULL);

ALTER TABLE Clients ADD CONSTRAINT ClientsID_PK PRIMARY KEY(Cleints_id);
ALTER TABLE Clients 
  ALTER COLUMN Clients_id NOT NULL,
  ALTER COLUMN Nom_Clients NOT NULL,
  ALTER COLUMN Adresse NOT NULL; 



CREATE TABLE Produits (
   Produit_id INT PRIMARY KEY NOT NULL,
   Nom_produit VARCHAR(50) NOT NULL,
   Prix DECIMAL NOT NULL CHECK (Prix>O));

ALTER TABLE  Produits ADD CONSTRAINT ProduitsID_PK PRIMARY KEY (Produit_id);
ALTER TABLE  Produits ADD CONSTRAINT Prix_CK CHECK (Prix>0);
ALTER TABLE Produits
  ALTER COLUMN Produit_id NOT NULL,
  ALTER COLUMN Nom_produit NOT NULL,
  ALTER COLUMN Prix NOT NULL; 



CREATE TABLE Commandes ( 
   Commande_id INT NOT NULL PRIMARY KEY, 
   Cliends_id INT NOT NULL FOREIGN KEY ,
   Produit_id INT NOT NULL FOREIGN KEY,
   Quantité INT NOT NULL, 
   Commande_date DATE NOT NULL);

ALTER TABLE  Commandes ADD CONSTRAINT CommandesID_PK PRIMARY KEY (Commande_id);
ALTER TABLE  Commandes ADD CONSTRAINT ClientsID_FK FOREIGN KEY (Clients_id) REFERENCES Clients (Clients_id);
ALTER TABLE  Commandes ADD CONSTRAINT ProduitID_FK FOREIGN KEY (Produit_id) REFERENCES Produits (Produit_id)
ALTER TABLE Commandes
  ALTER COLUMN Commande_id NOT NULL,
  ALTER COLUMN Clients_id NOT NULL,
  ALTER COLUMN Produit_id NOT NULL, 
  ALTER COLUMN Quantité NOT NULL,
  ALTER COLUMN Commande_date NOT NULL;
